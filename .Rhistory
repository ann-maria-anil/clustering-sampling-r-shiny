### ------------------------------------------
### SIMPLE RANDOM SAMPLING (SRS)
### Population: Electricity Consumption of Apartments
### ------------------------------------------
set.seed(123)
### -------------------------------
### 1. Generate Hypothetical Population
### -------------------------------
N <- 120   # total apartments
population <- data.frame(
Apartment_ID = 1:N,
Electricity_kWh = round(rnorm(N, mean = 250, sd = 40), 0)
)
# Population summary
summary(population$Electricity_kWh)
### -------------------------------
### 2. SRS Without Replacement (SRSWOR)
### -------------------------------
n <- 20  # sample size
sample_wor <- population[sample(1:N, n, replace = FALSE), ]
mean_wor <- mean(sample_wor$Electricity_kWh)
var_wor  <- var(sample_wor$Electricity_kWh)
### -------------------------------
### 3. SRS With Replacement (SRSWR)
### -------------------------------
sample_wr <- population[sample(1:N, n, replace = TRUE), ]
mean_wr <- mean(sample_wr$Electricity_kWh)
var_wr  <- var(sample_wr$Electricity_kWh)
### -------------------------------
### 4. Print Comparison
### -------------------------------
cat("----- Population Statistics -----\n")
cat("Population Mean:", mean(population$Electricity_kWh), "\n")
cat("Population Variance:", var(population$Electricity_kWh), "\n\n")
cat("----- SRSWOR Statistics -----\n")
cat("Sample Mean (WOR):", mean_wor, "\n")
cat("Sample Variance (WOR):", var_wor, "\n\n")
cat("----- SRSWR Statistics -----\n")
cat("Sample Mean (WR):", mean_wr, "\n")
cat("Sample Variance (WR):", var_wr, "\n")
### -------------------------------
### 5. Graph 1 – Population Histogram
### -------------------------------
hist(population$Electricity_kWh,
main="Population Electricity Consumption (kWh)",
xlab="Electricity Consumption (kWh)",
ylab="Frequency",
col="skyblue",
border="black")
### -------------------------------
### 6. Graph 2 – Boxplot: SRSWOR vs SRSWR
### -------------------------------
boxplot(sample_wor$Electricity_kWh,
sample_wr$Electricity_kWh,
names=c("SRSWOR","SRSWR"),
col=c("lightgreen", "lightpink"),
main="Comparison of Sample Distributions",
ylab="Electricity Consumption (kWh)")
